#pragma once

namespace cxx {

/**
 * \brief Generic comparator class that defaults to the less-than operator.
 */
template< typename Obj >
struct Lt_functor
{
  bool operator () (Obj const &l, Obj const &r) const
  { return l < r; }
};

};

